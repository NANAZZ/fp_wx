/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*功能一：通用的箭头样式*/
.arrow{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform:rotate(45deg);
}
/*功能二：通用分割块*/
.divider{
  height:20rpx;
  background-color: #FEF9F8;
}
/*功能三：通用项目条*/
.cell{
  background: rgba(255,255,255,.5);
  font-size:13px;
}
.cell-item{
  border:1rpx solid #ddd;
  padding:20rpx 30rpx;
}

/*功能四：通用单行超出范围截取并添加省略号*/
.ell{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;/*超出部分添加...*/
}

/*功能五：商品列表*/
.goods{
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
}
.goods-item{
  height:500rpx;
  width:370rpx;
  border:1rpx solid #ddd;
  background:rgba(255,255,255,.5);
  text-align: center;
  margin-top:10rpx;
  /* display: flex;
  flex-direction: column;
  justify-content: space-around; */
}
.goods-item image{
  width:340rpx;
  height:420rpx;
  /* text-align: center; */
}
.goods-title,.goods-price{
  font-size:12px;
  color:#262626;
  display:block;
}
