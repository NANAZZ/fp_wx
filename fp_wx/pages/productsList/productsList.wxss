/* pages/productsList/productsList.wxss */
page{
  background:#FEF9F8;
}
/* 搜索框 */
.search{
  /* width:100%; */
  height:60rpx;
  padding:18rpx;
  border-top:1rpx solid #ccc;
  border-bottom:1rpx solid #ccc;
  background:#FEF9F8;
}
.search-inner-input{
  display:inline-block;
  width:100%;
  height:100%;
  background:#fff;
  font-size:12px;
  font-weight:300;
}
/*商品列表*/
.goods{
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
}
.goods-item{
  height:600rpx;
  width:370rpx;
  border:1rpx solid #ddd;
  background:rgba(255,255,255,.5);
  text-align: center;
  margin-top:10rpx;
}
.goods-item image{
  width:340rpx;
  height:520rpx;
}
.goods-title,.goods-price{
  font-size:12px;
  color:#262626;
  display:block;
}