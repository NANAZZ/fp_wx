/* pages/home/home.wxss */
page{
  background:#FEF9F8;
}
/* 搜索框 */
.search{
  height:60rpx;
  padding:18rpx;
  border-top:1rpx solid #ccc;
  border-bottom:1rpx solid #ccc;
  background:#FEF9F8;
}
.search-inner-input{
  display:inline-block;
  width:100%;
  height:100%;
  background:#fff;
  font-size:12px;
  font-weight:300;
}
/* 轮播图 */
.slider,.slider swiper,.slider image{
  height:600rpx;
  width:100%;
}
/* 六宫格 */
/*1:父元素弹性布局*/
.index-nav{
  display: flex;
  flex-wrap: wrap;
  background:#fff;
}
/*2:子元素弹性布局 image/text*/
.index-nav .nav-item{
  height:200rpx;
  width:33.33333%;
  box-sizing: border-box;
  /*border:1rpx solid #ddd;*/
  /*item子元素弹性布局*/
  display: flex;
  flex-direction: column;   /*子元素按列布局*/
  justify-content: center;  /*水平居中 垂直居中*/
  align-items: center;
  /*小程序:推荐使用字体大小使用 px*/
  font-size:12px;
  /*右侧添加边框 底部添加边框*/
  border-right:1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
/*将 3 6 9元素右侧框去掉*/
.index-nav .nav-item:nth-child(3){
  border-right:0 none;
}
.index-nav .nav-item:nth-child(6){
  border-right:0 none;
}
/* 1 2 3 元素加上上边框 */
.index-nav .nav-item:nth-child(1),
.index-nav .nav-item:nth-child(2),
.index-nav .nav-item:nth-child(3){
  border-top:1rpx solid #ccc;
}
/*3:修改图片宽度高度*/
.index-nav image{
  width:70rpx;
  height:70rpx;
  margin-bottom:20rpx;
}

/*首页详情*/
.goods-container{
  height:1030rpx;
  overflow: hidden;
}
