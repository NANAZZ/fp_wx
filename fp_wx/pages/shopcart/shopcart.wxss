/* pages/shopcart/shopcart.wxss */
page{
  background: #FEF9F8;
}
/* 复选框 */
checkbox .wx-checkbox-input{
  width:30rpx;
  height:30rpx;
  border-radius: 50%;
  border:1rpx solid #ccc;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;
  width:30rpx;
  height:30rpx;
  line-height:30rpx;
  text-align: center;
  font-size: 18px;
  color:#d52976;
}
/* 管理 */
.top-all{
  height:80rpx;
  border-top:1rpx solid #ccc; 
  border-bottom:1rpx solid #ccc;
  display:flex;
  color:#262626;
  font-size:12px;
  justify-content: space-between;
  padding:0 20rpx;
  line-height: 75rpx;
}
.top-checkbox text{
  margin-left:10rpx;
}
.top-manage{
  margin-right:30rpx;
}
/* 商品列表 */
.goods{
  padding:20rpx;
  background: #fff;
  border-bottom:1rpx solid #ddd;
  display:flex;
  /* position:relative; */
}
.goods-checkbox{
  width:10%;
  line-height: 220rpx;
}
.goods-img{
  width:30%;
}
.goods-img image{
  width:80%;
  height:240rpx;
  /* border:1rpx solid #ccc; */
}
.goods-info{
  width:30%;
  color:#262626;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.goods-title,.goods-price,.goods-size{
  margin-top:30rpx;
  font-size:13px;
}
.goods-count{
  width:30%;
  display: flex;
  justify-content: flex-end;
  margin-top:90rpx;
  /* padding-right:20rpx; */
}
.goods-count view{
  width:48rpx;
  height:48rpx;
  line-height:48rpx;
  box-sizing: border-box;
  color:#262626;
  text-align: center;
  border:1rpx solid #ccc;
}
.goods-count view:first-child{
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.goods-count view:last-child{
  border-top-right-radius:8rpx;
  border-bottom-right-radius: 8rpx;
}
.goods-count input{
  width:48rpx;
  min-height:none;
  height:46rpx;
  border:1rpx solid #ccc;
  text-align: center;
  font-size:12px;
}
.btn-minus:active,.btn-plus:active{
  color:#d52976;
}
/* 底部结算 */
.parent-bottom{
  width:100%;
  position:fixed;
  bottom:0%;
}
.bottom-pay{
  display:flex;
  padding-left:20rpx;
  background: #ccc;
}
.bottom-checkbox{
  width:10%;
  line-height:86rpx;
}
.bottom-total{
  width:50%;
  padding-top:30rpx;
}
.bottom-btn-total{
  width:40%;
  font-size:14px;
  color:#fff;
  padding:15rpx;
  border-radius:0;
  background:#d52976;
}