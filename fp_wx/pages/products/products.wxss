/* pages/products/products.wxss */
page{
  background:#FEF9F8;
}
/* 搜索框 */
.search{
  /* width:100%; */
  height:60rpx;
  padding:18rpx;
  border-top:1rpx solid #ccc;
  border-bottom:1rpx solid #ccc;
  background:#FEF9F8;
}
.search-inner-input{
  display:inline-block;
  width:100%;
  height:100%;
  background:#fff;
  font-size:12px;
  font-weight:300;
}
/* 左右导航 */
.tabbar{
  display:flex;
}

.tabbar-left{
  width:25%;
  color:#262626;
  font-size:14px;
  margin-top:15rpx;
  text-align: center;
}
.tab-item{
  border:1rpx solid #ccc;
  background:rgba(255,255,255,.5);
  padding:30rpx;
  border-bottom:none;
}
.hover{
  color:#d52976;
}
.tab-item:last-child{
  border-bottom:1rpx solid #ccc;
}

.tabbar-container{
  width:75%;
}
.goods{
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
  height:1545rpx;
  overflow: hidden;
}
.goods-item{
  height:500rpx;
  width:48.5%;
  border:1rpx solid #ddd;
  background:rgba(255,255,255,.5);
  text-align: center;
  margin-top:15rpx;
}
.goods-item image{
  margin-top:5rpx;
  width:96%;
  height:420rpx;
}
.goods-title,.goods-price{
  font-size:12px;
  color:#262626;
  display:block;
}

.tabbar-btn{
  font-size:14px;
  padding:8rpx 0;
  margin-top:20rpx;
  color:#262626;
  border-radius:none;
}
